@{
  Layout="Shared/_Layout.cshtml";
}
<div class="panel panel-default">
  <div class="panel-body">
    <h2>Bands:</h2>
    <hr />
    @if (Model.Count != 0)
    {
      <div class="band">
        @foreach (var band in Model)
        {
          <a href='/bands/@band.GetId()'><h3>Name: @band.GetName()</h3></a>
          <a href="/band/edit/@band.GetId()"><p class="btn">Edit</p></a>   <a href="/band/delete/@band.GetId()"><p class="btn">Delete</p></a><hr />
        }
      </div>
    }
    <a href="/bands/new"><p class="btn-wide">Add new band</p></a>
  </div>
</div>
