@{
  Layout="Shared/_Layout.cshtml";
}
<div class="panel panel-default">
  <div class="panel-body">
    <h2>Concerts:</h2>
    <hr />
    @if (Model.Count != 0)
    {
      <div class="concert">
        @foreach (var concert in Model)
        {
          <a href='/concerts/@concert.GetId()'><h3>Name: @concert.GetShowDate()</h3></a>
          <a href="/concert/edit/@concert.GetId()"><p class="btn">Edit</p></a>   <a href="/concert/delete/@concert.GetId()"><p class="btn">Delete</p></a><hr />
        }
      </div>
    }
    <a href="/concerts/new"><p class="btn-wide">Add new concert</p></a>
  </div>
</div>
